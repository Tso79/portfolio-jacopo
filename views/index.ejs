<!-- Featured Projects Section -->
<section class="featured-projects-section" id="featured-projects">
    <div class="container">
        <div class="section-header">
            <span class="section-tag">Portfolio</span>
            <h2 class="section-title">
                Progetti che <span class="highlight">Ispirano</span>
            </h2>
        </div>

        <div class="projects-grid">
            <% data.projects.slice(0, 3).forEach((project, index) => { %>
                <article class="project-card" data-index="<%= index %>">
                    <div class="project-image">
                        <img src="<%= project.image %>" alt="<%= project.title %>" loading="lazy">
                        <div class="project-overlay">
                            <div class="project-category"><%= project.category %></div>
                            <div class="project-actions">
                                <a href="/project/<%= project.id %>" class="project-btn">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <% if (project.video) { %>
                                    <button class="project-btn play-video" data-video="<%= project.video %>">
                                        <i class="fas fa-play"></i>
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="project-content">
                        <h3 class="project-title"><%= project.title %></h3>
                        <p class="project-description"><%= project.description %></p>

                        <div class="project-footer">
                            <span class="project-year">2024</span>
                            <a href="/project/<%= project.id %>" class="project-link">
                                <span>Vedi progetto</span>
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </article>
            <% }); %>
        </div>

        <div class="section-footer">
            <a href="/portfolio" class="view-all-btn">
                <span>Vedi tutti i progetti</span>
                <div class="btn-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
            </a>
        </div>
    </div>
</section>

